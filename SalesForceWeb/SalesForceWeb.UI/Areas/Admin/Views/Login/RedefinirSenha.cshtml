
@{
    ViewBag.Title = "Redefinir Senha de Acesso";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

}
@model SalesForceWeb.Domain.Entities.Usuario

<script src="@Url.Content("~/Areas/Admin/Content/js/jquery/eventos.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Areas/Admin/Content/js/angular/angular.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Areas/Admin/Content/js/angular/login_service.js")" type="text/javascript"></script>


<div id="login-holder">
    <div id="logo-login">
        <a href="index.html"><img src="~/Areas/Admin/Content/images/shared/logo.png" width="156" height="40" alt="" /></a>
    </div>

    <div class="clear"></div>

    <div id="loginbox">
        <div id="login-inner">
            @using (Html.BeginForm("", "", FormMethod.Post, new { @id = "FormRedefinir", ng_controller= "logincontroller" }))
            {
                @Html.AntiForgeryToken();

                <table border="0" cellpadding="0" cellspacing="0">
                    <tr>
                        <td colspan="2" style="text-align:center;color:#ff0000;"><div id="mensagem"></div></td>
                    </tr>
                    
                    <tr>
                        <th>@Html.LabelFor(model => model.Senha)</th>
                        <td>
                            @Html.TextBoxFor(model => model.Senha, new { @type = "password", @class = "login-inp", required = "required", ng_model= "formSenha.Senha" })
                        </td>
                    </tr>
                    <tr>
                        <th>Confirmar</th>
                        <td><input type="password" value="" name="txtconfirma" id="txtconfirma" class = "login-inp" /></td>
                    </tr>
                    
                    <tr>
                        <th></th>
                        <td><input type="button" class="submit-login" onclick="RedefinirSenha()" /></td>
                    </tr>
                </table>
            }
        </div>
        <div class="clear"></div>
    </div>
    <div id="forgotbox">
        <div class="clear"></div>
        <a href="" class="back-login">Voltar</a>
    </div>
</div>

